@model List<Product>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Manage Products";
}

<h2>Manage Products</h2>
<a href="/Product/Create">
    <span style="font-size: 2.5em; color: black; padding:10px">
        <i class="fas fa-plus-circle"></i>
    </span>
</a>
<form method="post" action="/product/deleteall">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" id="chk" />
                    <label for="chk">Check All</label>
                </th>
            </tr>
            <tr>
                <th><button class="del">Delete</button></th>
                <th>Id</th>
                <th>CategoryId</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>ImageUrl</th>
                <th>Edit</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="ids" value="@item.Id" />
                    </td>
                    <td>@item.Id</td>
                    <td>@item.CategoryId</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>
                        @if (item.ImageUrl != null)
                        {
                            <img src="/upload/@item.ImageUrl" width="200" />
                        }
                    </td>
                    <td>
                        <a href="/product/Edit/@item.Id">
                            <img src="/Images/edit.png" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
<script type="text/javascript">
    var b = document.getElementsByClassName("del");
    b.click(confirmDelete);
    chk.change(function () {
        document.getElementsByName("ids").check(this.checked);
    });
</script>