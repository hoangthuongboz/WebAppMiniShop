@model List<Category>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Manage Category";
}

<h2>Manage Categories</h2>
<a href="/category/create">
    <span style="font-size: 2.5em; color: black; padding:10px">
        <i class="fas fa-plus-circle"></i>
    </span>
</a>
<form method="post" action="/category/deleteall">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" id="chk" />
                    <label for="chk">Check All</label>
                </th>
            </tr>
            <tr>
                <th><button class="del">Delete</button></th>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="ids" value="@item.Id"/>
                    </td>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a href="/category/edit/@item.Id">
                            <img src="/images//edit.png" />
                        </a>
                    </td>
                    <td>
                        <a class="del" href="/category/delete/@item.Id">
                            <img src="/images/trash.png" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

<script type="text/javascript">
    var b = document.getElementsByClassName("del");
    b.click(confirmDelete);   
    chk.change(function () {
        document.getElementsByName("ids").check(this.checked);
    });
</script>


